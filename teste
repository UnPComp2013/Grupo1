#include<iostream>
#include<cstdlib>
using namespace std;

//! fun��o que calcula o fatorial de um dado numero.
/*!
esta fun��o recebe como parametro um numero e retorna o seu fatorial.
\param num numero a ser calculado o fatorial.

*/
double factorial(int num)


{
	if (num<1)
	return 1;
	else
	return num* factorial(num -1);
	
}

int main()
{
	int num;
	
	setlocale(LC_All, "portuguese");
	
	cout<<"digite um numero: ";
	cin >>num;
	cout<<" o fatorial de"<< num << " e "<<  factorial(num+1)<<endl;
	return 0;
	system("pause");

}
